<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar</title>
    <link href="/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <form class="needs-validation" action="/editar/<%=contacto._id%>" method="post" novalidate>
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <div class="input-group has-validation">
                    <input type="text" name="nombre" class="form-control" id="nombre" aria-describedby="inputGroupPrepend" value="<%= contacto.nombre%>" required>
                    <div class="invalid-feedback">
                        Rellene este campo
                    </div>
                </div>


                <div class="mb-3">
                    <label for="numero" class="form-label">Número</label>
                    <div class="input-group has-validation">
                        <input type="number" name="numero" class="form-control" id="numero" value="<%= contacto.numero%>" required>
                        <div class="invalid-feedback">
                            Agrega un numero
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="direccion" class="form-label">Dirección</label>
                        <div class="input-group has-validation">
                            <input type="text" name="direccion" class="form-control" id="direccion" value="<%= contacto.direccion%>" required>
                            <div class="invalid-feedback">
                                Agrega una dirección
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">e-mail</label>
                            <div class="input-group has-validation">
                                <input type="email" name="email" class="form-control" id="email" value="<%= contacto.email%>" required>
                                <div class="invalid-feedback">
                                    Agrega un e-mail
                                </div>
                            </div>


                            <button type="submit" class="mt-3 btn btn-primary">Enviar</button>
        </form>


        <% if(typeof validacion != 'undefined'){%>
            <% validacion.forEach((elem)=>{%>
                <div class="mt-3 alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>¡error!</strong>
                    <%=elem.msg%>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

                <%  })%>
                    <%}%>
                        </div>


                        <script lenguage="javascript" src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
                        <script>
                            (function() {
                                'use strict'

                                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                                var forms = document.querySelectorAll('.needs-validation')

                                // Loop over them and prevent submission
                                Array.prototype.slice.call(forms)
                                    .forEach(function(form) {
                                        form.addEventListener('submit', function(event) {
                                            if (!form.checkValidity()) {
                                                event.preventDefault()
                                                event.stopPropagation()
                                            }

                                            form.classList.add('was-validated')
                                        }, false)
                                    })
                            })()
                        </script>
</body>

</html>